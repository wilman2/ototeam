= simple_form_for @friend, :html => { :class => "form-horizontal" } do |f|
  -if @friend.errors.any?
    .alert.alert-danger.alert-dismissable
      %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", :type => "button"} &times;
      %h4= "#{pluralize(@friend.errors.count, "error")} prohibited this friend from being saved:"

      %ul
        - @friend.errors.full_messages.each do |msg|
          %li= msg

  =f.input :name
  =f.input :email
  =f.input :phone, hint: 'Podaj telefon'
  =f.button :submit, class: 'btn btn-primary'